<div class="container">
  {{#if model.payments}}
  <h4>{{t 'account.payouts.title'}}</h4>
  <div class="table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th>{{t 'account.payouts.table.time'}}</th>
          <th>{{t 'account.payouts.table.txid'}}</th>
          <th>{{t 'account.payouts.table.amount'}}</th>
        </tr>
      </thead>
      <tbody>
        {{#each model.payments as |tx|}}
          <tr>
            <td>{{format-date-locale tx.timestamp}}</td>
            <td>
              <a href="https://etherscan.io/tx/{{tx.tx}}" class="hash" rel="nofollow" target="_blank">{{tx.tx}}</a>
            </td>
            <td>{{format-balance tx.amount}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{else}}
  <h3>{{t 'account.payouts.nopayouts'}}</h3>
  {{/if}}
</div>
