<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-md-5">
        <h1 style="font-size: 24px">
          <strong>Open Feathereum Pool</strong>
        </h1>
        {{t 'index.header.payout' threthold=config.PayoutThreshold htmlSafe=true}}<br/>
        <span class="label label-success">PROP</span> {{t 'index.header.prop'}}
      </div>
      <div class="col-md-3 stats">
        <div><i class="fa fa-users"></i> {{t 'index.stats.miners'}} <span>{{format-number stats.model.minersTotal}}</span></div>
        <div><i class="fa fa-tachometer"></i> {{t 'index.stats.poolhash'}} <span id="poolHashrate">{{format-hashrate stats.model.hashrate}}</span></div>
        <div><i class="fa fa-money"></i> {{t 'index.stats.poolfee'}} <span id="poolFee" class="label label-success">{{config.PoolFee}}</span></div>
        {{#if stats.model.stats.lastBlockFound}}
        <div><i class="fa fa-clock-o"></i> {{t 'index.stats.lastblock'}} <span>{{format-relative (seconds-to-ms stats.model.stats.lastBlockFound)}}</span></div>
        {{/if}}
      </div>
      <div class="col-md-4 stats">
        <div><i class="fa fa-unlock-alt"></i> {{t 'index.stats.difficulty'}} <span>{{with-metric-prefix stats.difficulty}}</span></div>
        <div><i class="fa fa-tachometer"></i> {{t 'index.stats.nethash'}} <span>{{format-hashrate stats.hashrate}}</span></div>
        <div><i class="fa fa-bars"></i> {{t 'index.stats.blockheight'}} <span>{{format-number stats.height}}</span></div>
        <div><i class="fa fa-clock-o"></i> {{t 'index.stats.currentvariance'}} <span>{{format-number stats.roundVariance style='percent'}}</span></div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="stats">
    <h4>{{t 'index.lookup.title'}}</h4>
    <div class="input-group">
      {{input value=cachedLogin class="form-control" placeholder=(t 'index.lookup.addressplaceholder')}}
      <span class="input-group-btn">
        <button class="btn btn-primary" type="button" {{action 'lookup' cachedLogin}}>
          <span style="display: inline;"><i class="fa fa-search"></i> {{t 'index.lookup.button'}}</span>
        </button>
      </span>
    </div>
  </div>
  <div>
    <hr/>
    <h4 class="note note-info text-center">
      ethminer.exe -F {{config.HttpHost}}:{{config.HttpPort}}/&lt;address&gt;/&lt;worker&gt; -G
    </h4>
  </div>
</div>
